         <script>

        function removeCategory(id) {
            $.ajax({
                url: "/shop/categories/remove",
                type: 'POST',
                data: {
                        'id': id,
                    },
                success: function (data) {
                    if(data == 'OK') {
                        location.reload(true);
                    } else {
                        alert(data, 'error');
                    }
                }
            });
        }

         function createCategory() {
            $.ajax({
                url: "/shop/categories/new",
                type: 'POST',
                data: {
                        'label': $("#name").val(),
                    },
                success: function (data) {
                    if(data == 'OK') {
                        location.reload(true);
                    } else {
                        alert(data, 'error');
                    }
                }
            });
        }

            $('input').trigger("change");
            $('textarea').trigger("change");
        </script>
