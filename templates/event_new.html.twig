<html>
    <head>
    </head>
    <body>
        <form method="POST" action="/events/add/new">
            Titre:<br>
            <input type="text" name="title" value=""><br>

            Description:<br>
            <input type="text" name="description" value=""><br><br>

            Photo:<br>
            <input type="text" name="picture" value=""><br><br>

            Date début:<br>
            <input type="datetime-local" id="start" name="begin_date" value="2018-07-22" min="2018-01-01" max="2018-12-31"><br><br>

            Date fin:<br>
            {# <input type="text" name="end_date" value=""><br><br> #}
            <input type="datetime-local" id="start" name="end_date" value="2018-07-22" min="2018-01-01" max="2018-12-31"><br><br>

            Prix:<br>
            <input type="number" name="price" value=""><br><br>

            Centre:<br>
            <select name="id_Center" selected="{{ user.id_Center }}">
                {% for center in centers %}
                <option value="{{ center.id }}">{{ center.label }}</option>
                {% endfor %}
            </select><br><br>

            Récurrence:<br>
            <select name="id_Recurrence">
                {% for rec in recs %}
                <option value="{{ rec.id }}">Tous les {{ rec.label }} jours</option>
                {% endfor %}
            </select><br><br>

            <input type="submit" value="Modifier">
        </form>

        <style>
            form {
                margin: 20px;
            }
        </style>
    </body>
</html>