<!DOCTYPE html>
<html>
    <head>
        {% include "head.html" %}
    </head>
    
    <body>
        <!-- Header -->
        {% include "header.html" %}
        <div id="logo" style="text-align: center"></div>

        <!-- Deuxième Header -->
        {% include "navbar.html" %}
        
        <!-- Contenu de page -->
            <!-- Événement du mois -->
            <h1 class="titrepage">Événement du mois</h1>
            {% for event in events %}
                {% if event.top_event == true %}
                    <div class="event_box">
                        {% if event.price == 0 %}
                        <div class="ribbon ribbon-top-left"><span>Gratuit</span></div>
                        {% endif %}
                            <div class="event_box_nav">
                                <h2 style="margin-left: 15px">{{ event.title }}</h2>
                                {% if user != null %}
                                <a href="/events/{{ event.id }}"><img src="images/down-arrow.png" class="next_arrow"></img></a>
                                {% else %}
                                <a href="/login"><img src="images/down-arrow.png" class="next_arrow"></img></a>
                                {% endif %}
                            </div>
                            <div class="thumbail" style="background: #eceef0 url({{ event.picture }}) no-repeat 0% 50% / cover;"></div>
                            <div class="row">
                                <div class="col" style="z-index: 2;">
                                    <h4 style="color: black; margin: 12px;">{{ event.begin_date|date("d/m/Y") }}</h4>
                                </div>
                                <div class="col" style="z-index: 2;">
                                    {% if event.price > 0 %}
                                    <h4 style="color: black; margin: 12px; text-align: center">{{ event.price }}€</h4>
                                    {% endif %}
                                </div>
                                <div class="col" style="z-index: 2;">
                                    {% if user != null %}
                                        <button class="btn btn-secondary" style="margin-right: 4%;" onclick="location.href='#'">Publier</button>
                                        {% if not event.sub %}
                                            <button class="btn btn-secondary" onclick="subscribe({{ event.id }})">Souscrire<bubble>{{ event.count }}</bubble></button>
                                        {% else %}
                                            <button class="btn btn-secondary" onclick="unSubscribe({{ event.id }})">Se désinscrire<bubble>{{ event.count }}</bubble></button>
                                        {% endif %}
                                    {% else %}
                                        <button class="btn btn-secondary" onclick="location.href='/login'">Souscrire<bubble>{{ event.count }}</bubble></button>
                                    {% endif %}
                                </div>
                            </div>
                        <div class="p_index"><p style="font-size: larger;text-align: justify;display: contents;">{{ event.description }}</p></div>
                    </div>
                {% endif %}
            {% endfor %}

            <!-- Événements passés -->
            <h1 class="titrepage">Événements passés</h1>
            {% set limit = 0 %}
            {% for event in events %}
                {% set limit = limit + 1 %}
                {% if event.end_date|date("d/m/Y") < "now"|date("d/m/Y") and limit < 5 %}
                    <div class="event_box">
                    {% if event.price == 0 %}
                    <div class="ribbon ribbon-top-left"><span>Gratuit</span></div>
                    {% endif %}
                        <div class="event_box_nav">
                            <h2 style="margin-left: 15px">{{ event.title }}<bubbleIndex>{{ event.count }}</bubbleIndex></h2>
                            {% if user != null %}
                            <a href="/events/{{ event.id }}"><img src="images/down-arrow.png" class="next_arrow"></img></a>
                            {% else %}
                            <a href="/login"><img src="/images/down-arrow.png" class="next_arrow"></img></a>
                            {% endif %}
                        </div>
                        <div class="thumbail" style="background: #eceef0 url({{ event.picture }}) no-repeat 0% 50% / cover;"></div>
                        <div class="row">
                            <div class="col" style="z-index: 2;">
                                <h4 style="color: black; margin: 12px;">{{ event.begin_date|date("d/m/Y") }}</h4>
                            </div>
                            <div class="col" style="z-index: 2;">
                                {% if event.price > 0 %}
                                <h4 style="color: black; margin: 12px; text-align: center">{{ event.price }}€</h4>
                                {% endif %}
                            </div>
                            <div class="col" style="z-index: 2;">
                                {% if user != null %}
                                    {% if event.sub %}
                                        <button class="btn btn-secondary" style="margin-right: 4%;" onclick="location.href='#'">Publier</button>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="p_index"><p style="font-size: larger;text-align: justify;display: contents;">{{ event.description }}</p></div>
                    </div>
                {% endif %}
            {% endfor %}

            <!-- Boutique -->
            <h1 class="titrepage">Boutique</h1>

        <!-- Footer & Animations -->
        {% include "footer.html" %}
    </body>
</html>