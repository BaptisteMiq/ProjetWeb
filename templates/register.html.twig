<!doctype html>
<html lang="fr">
 <head>
	 <meta charset="utf-8">
   <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.css') }}" type="text/css"/>
	 <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css"/>
   <link rel="stylesheet" href="{{ asset('css/Animations.css') }}" type="text/css"/>
	 <title>Projet Web</title>
 </head>
 
 
 <body>
 <header>
		<div class="titrehead">Inscription</div>
		<div class="back"><a href="/">< Retour</a></div>
	</header>

  <p style="color:white; text-align:center;">{{ error is defined ? error : '' }}</p>

  <!--Container-->
  <div class="box" style="width: 450px; height: 300px;">
	<form method="POST" action="/register">
	<div style="float: left">
	  <p> 
        <label> Nom : </label></br>
        <input name="lastname" required="required" type="text" placeholder="Nom" value="{{ data is defined ? data.lastname : '' }}" />
    </p>

	  <p> 
        <label> Prénom : </label></br>
        <input name="firstname" required="required" type="text" placeholder="Prénom" value="{{ data is defined ? data.firstname : '' }}" />
    </p>
	
	  <p> 
        <label> Mail : </label></br>
        <input name="mail" required="required" type="text" placeholder="Adresse Mail" value="{{ data is defined ? data.mail : '' }}" />
    </p>
  </div>
  	<div style="float: right">
    <p> 
		<label> Mot de passe : </label></br>
		<input name="password" required="required" type="password" placeholder="Mot de passe" /> 
    </p>
    <p> 
		<label> Confirmer mot de passe : </label></br>
		<input name="sec_password" required="required" type="password" placeholder="Confirmation" /> 
    </p>

    <p> 
		<label> Centre </label></br>
		<input name="id_Center" required="required" type="text" placeholder="Centre" value="{{ data is defined ? data.id_Center : '' }}" /> 
    </p>
	
    </div>
    <div style="margin-left: 39%;">
    <p> 
		<input class="btn btn-primary" type="submit" value="Inscription" /> 
    </p>
    </div>
	</form>
  </div>

  <!--Animations-->
	<div class="waveWrapper waveAnimation">
		<div class="waveWrapperInner bgTop">
			<div class="wave waveTop" style="background-image: url('images/wave3.png')"></div>
		</div>
		<div class="waveWrapperInner bgMiddle">
			<div class="wave waveMiddle" style="background-image: url('images/wave2.png')"></div>
		</div>
		<div class="waveWrapperInner bgBottom">
			<div class="wave waveBottom" style="background-image: url('images/wave3.png')"></div>
		</div>
	</div>
  
 </body>
</html>
