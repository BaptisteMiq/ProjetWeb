<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="{{ asset('/vendors/bootstrap/css/bootstrap.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('css/Animations.css') }}" type="text/css"/>

        <script src="{{ asset('js/actions.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <title>BDE CESI TOULOUSE</title>
    </head>

    <body>
        <!-- Header -->
        {% include "header.html" %}
        <div id="logo" style="text-align: center"></div>

        <!-- Deuxième Header -->
        <div class="nav-bar">
            {% if user != null %}
            <button class="btn btn-secondary" style="padding: inherit; margin: 4px; width: 106px;float: inherit" onclick="location.href='./users/logout'">Déconnexion</button>
            <ul class="nav" style="padding: 0;">
                {% if user.id_Rank == 3 %}
                    <li><a href="/events/action/new">Ajouter un événement</a></li>
                {% endif %}
                <li><a href="#">Souscriptions</a></li>
                <li><a href="#">Configuration</a></li>
            </ul>
            {% endif %}
        </div>
        
        <!-- Contenu de page -->
        <h1 class="titrepage">Evenements</h1>
        {% for event in events %}
            <div class="event_box">
            {% if event.price == 0 %}
            <div class="ribbon ribbon-top-left"><span>Gratuit</span></div>
            {% endif %}
                <div class="event_box_nav">
                    <h2 style="margin-left: 15px">{{ event.title }}</h2>
                    {% if user != null %}
                    <a href="/events/{{ event.id }}"><img src="images/down-arrow.png" class="next_arrow"></img></a>
                    {% else %}
                    <a href="/login"><img src="images/down-arrow.png" class="next_arrow"></img></a>
                    {% endif %}
                </div>
                {% if event.end_date|date("d/m/Y") < "now"|date("d/m/Y") %}
                <div class="rubbon">événement fini</div>
                {% endif %}
                <div class="thumbail" style="background: #eceef0 url({{ event.picture }}) no-repeat 0% 50% / cover;"></div>
                <div class="row">
                    <div class="col" style="z-index: 2;">
                        <h4 style="color: black; margin: 12px;">{{ event.begin_date|date("d/m/Y") }}</h4>
                    </div>
                    <div class="col" style="z-index: 2;">
                        {% if event.price > 0 %}
                        <h4 style="color: black; margin: 12px; text-align: center">{{ event.price }}€</h4>
                        {% endif %}
                    </div>
                    <div class="col" style="z-index: 2;">
                        {% if user != null %}
                            {% if event.end_date|date("d/m/Y") < "now"|date("d/m/Y") %}
                                {% if not event.sub %}
                                {% else %}
                                    <button class="btn btn-secondary" style="margin-right: 4%;" onclick="location.href='#'">Publier</button>
                                {% endif %}
                            {% else %}
                                {% if not event.sub %}
                                    <button class="btn btn-secondary" onclick="subscribe({{ event.id }})">Souscrire<bubble>{{ event.count }}</bubble></button>
                                {% else %}
                                    <button class="btn btn-secondary" onclick="unSubscribe({{ event.id }})">Se désinscrire<bubble>{{ event.count }}</bubble></button>
                                {% endif %}
                            {% endif %}
                        {% else %}
                            <button class="btn btn-secondary" onclick="location.href='/login'">Souscrire<bubble>{{ event.count }}</bubble></button>
                        {% endif %}
                    </div>
                </div>
                <div class="p_index"><p style="font-size: larger;text-align: justify;display: contents;">{{ event.description }}</p></div>
            </div>
        {% endfor %}

        <!-- Footer & Animations -->
        {% include "footer.html" %}
    </body>
</html>
